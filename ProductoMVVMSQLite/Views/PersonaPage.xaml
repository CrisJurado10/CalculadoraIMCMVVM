<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductoMVVMSQLite.Views.PersonaPage"
             xmlns:local="clr-namespace:ProductoMVVMSQLite.ViewModels"
             Title="PersonaPage">
    <VerticalStackLayout>
        
        <Label Text="Ingresa tu Nombre:"></Label>
        <Entry Text="{Binding Nombre}"></Entry>
        
        <Label Text="{Binding Nombre}" VerticalOptions="Center" FontSize="Large"></Label>

        <Button Text="Save" Command="{Binding SaveCommand}"></Button>

    </VerticalStackLayout>
</ContentPage>